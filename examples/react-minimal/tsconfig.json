{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@flowtomic/flowgraph": ["../../src"],
      "@flowtomic/flowgraph/*": ["../../src/*"],
      "@flowtomic/flowgraph-core-view": ["../../packages/core-view/src"],
      "@flowtomic/flowgraph-core-view/*": ["../../packages/core-view/src/*"],
      "@flowtomic/flowgraph-react": ["../../packages/react/src"],
      "@flowtomic/flowgraph-react/*": ["../../packages/react/src/*"]
    }
  },
  "include": ["src"]
}